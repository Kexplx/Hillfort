<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginBottom="8dp"
        android:elevation="24dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/imgSite"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txtLat" android:layout_alignStart="@+id/txtSiteName" tools:ignore="RtlCompat"
                app:layout_constraintStart_toEndOf="@+id/textView10"
                android:layout_marginLeft="4dp" android:layout_marginStart="4dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Lat:"
                android:layout_width="28dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="21dp" android:layout_alignBottom="@+id/imgSite"
                android:id="@+id/textView10" android:layout_alignStart="@+id/txtSiteName"
                tools:ignore="RtlCompat"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/txtSiteName"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
        <TextView
                android:id="@+id/txtSiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
        <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignBottom="@+id/imgSite"
                android:textColor="@color/colorPrimary"
                android:id="@+id/txtLng" android:layout_alignStart="@+id/txtSiteName" tools:ignore="RtlCompat"
                app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp" android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="Lng:"
                android:layout_width="28dp"
                android:textColor="@color/colorPrimary"
                android:layout_height="22dp" android:layout_alignBottom="@+id/imgSite"
                android:id="@+id/textView2" android:layout_alignStart="@+id/txtSiteName"
                tools:ignore="RtlCompat"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/txtSiteName"
                android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
        <ImageView
                android:layout_width="88dp"
                android:layout_height="91dp" app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgSite"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtSiteName"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
        <CheckBox
                android:text="Visited"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_height="30dp"
                android:id="@+id/chkHasBeenVisited"
                android:layout_below="@+id/textView2"
                android:layout_alignStart="@+id/txtSiteName"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/txtSiteName"/>
    </android.support.constraint.ConstraintLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

    </RelativeLayout>
</android.support.v7.widget.CardView>