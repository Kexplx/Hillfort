<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:theme="@style/AppTheme">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarSite"
                app:theme="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/hillfort_title"
                app:titleTextColor="@color/colorToolBarText"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:id="@+id/txtSiteName"
                android:layout_width="206dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="@string/site_name"
                android:inputType="text"
                android:layout_marginTop="76dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textColor="@color/colorPrimary"
                android:importantForAutofill="no"/>

        <EditText
                android:id="@+id/txtSiteDescription"
                android:layout_width="235dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="@string/site_description"
                android:inputType="textPersonName"
                android:layout_marginTop="144dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimary" android:importantForAutofill="no"
        />

        <EditText
                android:id="@+id/txtAdditionNotes"
                android:layout_width="0dp"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="@string/site_notes"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:importantForAutofill="no"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="105dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="105dp" app:srcCompat="@drawable/trees"
                android:id="@+id/imgBtn1"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
                android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/imgBtn0"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="142dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="183dp" app:srcCompat="@drawable/hillfort_icon"
                android:id="@+id/imgBtn0"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="260dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
        />
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="105dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="105dp" app:srcCompat="@drawable/river"
                android:id="@+id/imgBtn3"
                tools:ignore="VectorDrawableCompat"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/imgBtn0" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="105dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="105dp" app:srcCompat="@drawable/mountains"
                android:id="@+id/imgBtn2"
                tools:ignore="VectorDrawableCompat"
                android:cropToPadding="true"
                android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/imgBtn0"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toStartOf="@+id/imgBtn1" android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp" app:layout_constraintStart_toEndOf="@+id/imgBtn3"
                android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>
        <Button
                android:text="@string/add_site"
                android:layout_width="381dp"
                android:layout_height="50dp"
                android:id="@+id/btnAdd"
                android:backgroundTint="@color/buttonGreen"
                android:layout_marginTop="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:textColor="@color/colorPrimary" app:layout_constraintHorizontal_bias="0.006"/>
        <EditText
                android:layout_width="145dp"
                android:layout_height="41dp"
                android:inputType="date"
                android:enabled="false"
                android:ems="10"
                android:id="@+id/txtDateVisited" tools:text="@tools:sample/date/ddmmyy"
                android:hint="@string/date_visited"
                android:textColor="@color/colorPrimary" android:importantForAutofill="no"
                android:visibility="visible" android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
        <Switch
                android:text="@string/visited"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/chkVisited"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
                android:textAllCaps="false" android:textStyle="italic"/>
        <com.google.android.gms.maps.MapView
                android:layout_width="219dp"
                android:layout_height="183dp"
                android:id="@+id/mapView"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp" android:layout_marginRight="12dp"
                app:layout_constraintStart_toEndOf="@+id/imgBtn0" android:layout_marginLeft="9dp"
                android:layout_marginStart="9dp" android:layout_marginTop="11dp"
                app:layout_constraintTop_toBottomOf="@+id/btnAdd"/>
        <CheckBox
                android:button="@android:drawable/btn_star"
                android:layout_width="34dp"
                android:layout_height="39dp"
                android:id="@+id/favorite"

                android:background="@android:color/transparent"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="112dp" android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginRight="112dp"/>
        <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="150dp"
                android:layout_height="52dp"
                android:numStars="3"
                android:stepSize="1.0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="240dp"
                android:layout_marginLeft="240dp" app:layout_constraintTop_toBottomOf="@+id/txtDateVisited"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>