<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarSite"
                app:theme="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/hillfort_title"
                app:titleTextColor="@color/colorToolBarText"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:id="@+id/txtSiteName"
                android:layout_width="206dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="@string/site_name"
                android:inputType="text"
                android:layout_marginTop="76dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textColor="@color/colorPrimary"
                android:importantForAutofill="no"/>

        <EditText
                android:id="@+id/txtSiteDescription"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="@string/site_description"
                android:inputType="textPersonName"
                android:layout_marginTop="144dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:textColor="@color/colorPrimary" android:importantForAutofill="no" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="1.0"/>

        <EditText
                android:id="@+id/txtAdditionNotes"
                android:layout_width="0dp"
                android:layout_height="61dp"
                android:ems="10"
                android:hint="@string/site_notes"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:importantForAutofill="no"
                android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="105dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="105dp" app:srcCompat="@drawable/trees"
                android:id="@+id/imgBtn1"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/imgBtn0"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="371dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="197dp" app:srcCompat="@drawable/hillfort_icon"
                android:id="@+id/imgBtn0"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="260dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
        />
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="105dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="105dp" app:srcCompat="@drawable/river"
                android:id="@+id/imgBtn3"
                tools:ignore="VectorDrawableCompat"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/imgBtn0" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
        <ImageButton
                android:background="@android:color/transparent"
                android:layout_width="105dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_height="105dp" app:srcCompat="@drawable/mountains"
                android:id="@+id/imgBtn2"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="144dp" android:layout_marginRight="144dp"
                android:cropToPadding="true"
                android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/imgBtn0"
                app:layout_constraintStart_toEndOf="@+id/imgBtn3" android:layout_marginLeft="29dp"
                android:layout_marginStart="29dp" android:contentDescription="@string/todo"/>
        <Button
                android:text="@string/set_location"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:id="@+id/btnAddLocation"
                android:backgroundTint="@color/buttonPurple"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="200dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="@string/add_site"
                android:layout_width="233dp"
                android:layout_height="50dp"
                android:id="@+id/btnAdd"
                android:backgroundTint="@color/buttonGreen"
                android:layout_marginTop="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:textColor="@color/colorPrimary" app:layout_constraintHorizontal_bias="0.006"/>
        <EditText
                android:layout_width="145dp"
                android:layout_height="41dp"
                android:inputType="date"
                android:enabled="false"
                android:ems="10"
                android:id="@+id/txtDateVisited" tools:text="@tools:sample/date/ddmmyy"
                android:hint="@string/date_visited"
                android:textColor="@color/colorPrimary" android:importantForAutofill="no"
                android:visibility="visible" android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
        <Switch
                android:text="@string/visited"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/chkVisited"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
                android:textAllCaps="false" android:textStyle="italic"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>