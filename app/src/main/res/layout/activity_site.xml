<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarSite"
                app:theme="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/colorToolBarText"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintTop_toTopOf="parent">

        <EditText
                android:id="@+id/txtSiteName"
                android:layout_width="206dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="@string/site_name"
                android:inputType="text"
                android:layout_marginTop="76dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textColor="@color/colorPrimary"/>

        <EditText
                android:id="@+id/txtSiteDescription"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:ems="10"
                android:hint="@string/site_description"
                android:inputType="textPersonName"
                android:layout_marginTop="140dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"
                android:textColor="@color/colorPrimary"/>

        <EditText
                android:id="@+id/txtAdditionNotes"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:ems="10"
                android:hint="@string/site_notes"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/colorPrimary"/>
        <Button
                android:text="Add Image"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:id="@+id/btnAddImage"
                android:backgroundTint="@color/buttonPurple"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtSiteDescription"
                android:textColor="@color/colorPrimary"/>
        <ImageView
                android:layout_width="80dp"
                android:layout_height="82dp" app:srcCompat="@drawable/trees"
                android:id="@+id/siteImage0"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="108dp" android:layout_marginRight="108dp"
                android:layout_marginTop="340dp" app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="196dp"
                android:layout_height="208dp" app:srcCompat="@drawable/hillfort_icon"
                android:id="@+id/siteImage2"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="320dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        />
        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp" app:srcCompat="@drawable/river"
                android:id="@+id/siteImage3"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="320dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="102dp" app:srcCompat="@drawable/mountains"
                android:id="@+id/siteImage1"
                tools:ignore="VectorDrawableCompat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="48dp" android:layout_marginRight="48dp"
                android:layout_marginTop="424dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Set Location"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:id="@+id/btnAddLocation"
                android:backgroundTint="@color/buttonPurple"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txtSiteDescription" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                android:textColor="@color/colorPrimary"/>
        <Button
                android:text="Add Site"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btnAdd"
                android:backgroundTint="@color/buttonGreen"
                android:layout_marginTop="252dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:textColor="@color/colorPrimary"></Button>
        <EditText
                android:layout_width="145dp"
                android:layout_height="41dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtDateVisited" tools:text="@tools:sample/date/ddmmyy"
                android:hint="@string/date_visited"
                android:layout_marginTop="96dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:textColor="@color/colorPrimary"/>
        <Switch
                android:text="Visited"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/chkVisited"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70dp"
                android:textAllCaps="false" android:textStyle="italic"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>