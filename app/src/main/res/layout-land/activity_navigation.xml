<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".views.map.SiteMapView">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:fitsSystemWindows="true"
            app:theme="@style/AppTheme">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarNavigator"
                android:layout_width="match_parent"
                app:theme="@style/AppTheme"
                android:layout_height="wrap_content"
                app:titleTextColor="@color/colorPrimary" app:title="@string/toolbar_titleText"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="222dp"
            android:layout_height="319dp"
            android:id="@+id/cardView"
            tools:layout_editor_absoluteX="453dp" tools:layout_editor_absoluteY="59dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    app:srcCompat="@drawable/icon"
                    android:id="@+id/imageView"
                    tools:ignore="VectorDrawableCompat" android:layout_width="111dp" android:layout_height="142dp"
                    tools:layout_editor_absoluteX="56dp" tools:layout_editor_absoluteY="16dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:id="@+id/currentTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="113dp"
                    android:id="@+id/currentDescripton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="11dp"
                    app:layout_constraintTop_toBottomOf="@+id/currentTitle"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="427dp"
            android:layout_height="318dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>